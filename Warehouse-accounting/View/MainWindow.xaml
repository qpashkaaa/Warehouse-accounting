<Window x:Class="Warehouse_accounting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Warehouse_accounting"
        xmlns:myControls ="clr-namespace:Warehouse_accounting.View.MyUserControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1440" 
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="Transparent"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <myControls:CustomToolBar Grid.Row="0"/>
        <myControls:AuthorizationModalWindow Grid.Row="1"/>
    </Grid>
</Window>
