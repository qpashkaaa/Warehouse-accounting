<UserControl x:Class="Warehouse_accounting.View.Components.CustomButtonAdd"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Warehouse_accounting.View.Components"
             mc:Ignorable="d">
    <Border x:Name="btnStyle" BorderThickness="0"
            CornerRadius="8,8,8,8" BorderBrush="Black" Background="#6A1039" Width="125" Height="44" Cursor="Hand">
        <Grid>
            <Image Source="/Images/AvatarAddButton.png" Width="20" HorizontalAlignment="Left" Margin="16 0 0 0"></Image>
            <TextBlock x:Name="btnPlaceholder" FontSize="14" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0 0 16 0" Panel.ZIndex="-1" Foreground="White"/>
        </Grid>
    </Border>
</UserControl>
